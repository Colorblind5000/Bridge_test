import requests
import json

# API konfiguration
api_url = "https://dsa-prd-sharedservices-api.azure-api.net/marselisborg/apsis-jobs"
headers = {
    'Ocp-Apim-Subscription-Key': '1155a9ca7acf4979842f2e7cd699f163',
    'Content-Type': 'application/json'
}

# Hent data fra API'en
response = requests.get(api_url, headers=headers)

# Tjek om forespørgslen var succesfuld
if response.status_code == 200:
    data = response.json()

    # Gem dataene som en JSON-fil
    file_path = "jobs.json"
    with open(file_path, 'w') as json_file:
        json.dump(data, json_file)

    print("JSON-filen er blevet oprettet.")
else:
    print(f"API forespørgsel fejlede med status kode: {response.status_code}")
